<h1>@ViewBag.title</h1>

<form asp-controller="Events" action="Edit" method="post">
    <div>
        <label for="name">Name</label>
        <input name="name" type="text" value="@ViewBag.eventToEdit.Name" />
    </div>
    <div class="form-group">
        <label for="description">Descripton</label>
        <input name="description" type="text" value="@ViewBag.eventToEdit.Descripton"/>
    </div>
    <input type="submit" value="Edit Event" />
   // <input type="hidden" value="@ViewBag.eventToEdit.Id" name="eventId" />
</form>